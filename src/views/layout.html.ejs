<!DOCTYPE html>
<html>

  <head>
    <meta charset="utf-8">
    <title>IIC2513 - CHANGE-ME</title>
    <% if (env !== 'development') { %>
      <link rel="stylesheet" href="<%= assetPath('app.css') %>">
    <% } %>
    <link href="https://unpkg.com/ionicons@4.4.2/dist/css/ionicons.min.css" rel="stylesheet">
  </head>

  <body>
    <header>
      <div id="logo">
        <img src="<%= assetPath('logo.png') %>" alt="Logo" />
      </div>
      <nav>
        <a href="/">Inicio</a>
        <a href="<%= ngosPath %>">ONGs</a>
        <a href="">Sobre nosotros</a>
      </nav>
      <div id="user-bar">
        <% if (locals.currentUser) { %>
          Bienvenido, <%= currentUser.firstName %>
          <form action="<%= destroySessionPath %>" method="post">
            <input type="hidden" name="_method" value="delete" />
            <input type="submit" value="Cerrar Sesión" />
          </form>
        <% } else { %>
          <a href="<%= newSessionPath %>">Iniciar sesión</a>
        <% } %>
      </div>
    </header>
    <% if (notice = flashMessage.notice) { %>
      <div class="alert notice"><%= notice %></div>
    <% } %>
    <%- body %>
    <script src="<%= assetPath('app.js') %>"></script>
  </body>

</html>
